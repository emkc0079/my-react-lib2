{
  "compilerOptions": {
    "target": "esnext", // Use a more modern target for better compatibility
    "lib": ["dom", "dom.iterable", "esnext"], // Keep your existing libraries
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // Keep ESNext for module resolution
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // Allow emitting output files
    "declaration": true, // Enable declaration file generation
    "declarationDir": "dist", // Output directory for declaration files
    "outDir": "dist", // Output directory for compiled JavaScript files
    "jsx": "react-jsx" // Keep your JSX setting
  },
  "include": ["src/**/*"], // Ensure all files in the src directory are included
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
